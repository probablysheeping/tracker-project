{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Backend (.NET)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-backend",
      "program": "${workspaceFolder}/tracker/bin/Debug/net9.0/tracker.dll",
      "args": [],
      "cwd": "${workspaceFolder}/tracker",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/tracker/Views"
      }
    },
    {
      "name": "Launch Frontend (Vite)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/tracker-frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "Local:\\s+(https?://\\S+)",
        "uriFormat": "%s",
        "action": "openExternally"
      }
    },
    {
      "name": "Attach to Backend (.NET)",
      "type": "coreclr",
      "request": "attach"
    }
  ],
  "compounds": [
    {
      "name": "Full Stack (Backend + Frontend)",
      "configurations": [
        "Launch Backend (.NET)",
        "Launch Frontend (Vite)"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "Full Stack",
        "order": 1
      }
    }
  ]
}